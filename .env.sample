# Database
DATABASE_URL=postgresql://user:password@localhost:5432/jarvis_mvp
DATABASE_URL_MVP=postgresql://user:password@localhost:5432/jarvis_mvp

# APIs
ELEVENLABS_API_KEY=your_elevenlabs_key

# ============================================
# LLM Configuration (Persona Engine)
# ============================================
# Primary: OpenAI, Fallback: Gemini
OPENAI_API_KEY=your_openai_key
GEMINI_API_KEY=your_gemini_key
LLM_MODEL_OPENAI=gpt-4o
LLM_MODEL_GEMINI=gemini-1.5-flash
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7
# For compatible APIs (Azure, local, etc)
# OPENAI_API_URL=https://api.openai.com/v1/chat/completions


# ============================================
# TTS Voice Provider Configuration
# ============================================
# Primary provider: 'cartesia' | 'fishaudio' | 'elevenlabs'
TTS_PROVIDER=cartesia

# Cartesia (Primary TTS - WebSocket streaming, 16kHz PCM)
CARTESIA_API_KEY_MVP=
CARTESIA_VOICE_ID_MVP=

# Fish Audio (Alternative primary - HTTP streaming, MP3)
FISH_AUDIO_API_KEY_MVP=
FISH_AUDIO_VOICE_ID_MVP=

# ElevenLabs (Fallback TTS - HTTP streaming, MP3)
ELEVENLABS_API_KEY_MVP=
ELEVENLABS_VOICE_ID_MVP=

# Runtime
NODE_ENV=development
LOG_LEVEL=debug
PORT=8080

# Testing - Set to 'true' for CI testing without API credits
TTS_MOCK_MODE=false
